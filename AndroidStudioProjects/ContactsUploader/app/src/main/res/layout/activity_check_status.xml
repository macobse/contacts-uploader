<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/contacts_background">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/contact"
        android:cropToPadding="true"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts Status"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@string/accept"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/txt1"
        android:layout_alignLeft="@+id/txt1"
        android:layout_alignStart="@+id/txt1" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@string/accept"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/txxt1"
        android:layout_alignLeft="@+id/txxt1"
        android:layout_alignStart="@+id/txxt1" />

</RelativeLayout>