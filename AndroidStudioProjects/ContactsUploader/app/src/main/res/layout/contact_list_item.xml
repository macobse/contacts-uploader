<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/contacts_background">

  <ImageView
      android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:src="@drawable/contact"
      android:cropToPadding="true"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:textSize="24sp"
        android:layout_alignBottom="@id/image"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxHeight="18dip"
        android:minHeight="25dip"
        android:visibility="invisible"
        android:layout_margin="22dp">
    </ProgressBar>
  <LinearLayout
      android:id="@+id/image_button_2"
      style="@android:style/Widget.Button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="12dp"
      android:layout_marginBottom="8dp"
      android:gravity="center"
      android:onClick="submitContacts">

    <ImageView
        android:id="@+id/imgButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_backup_green_48dp" />

    <TextView
        android:id="@+id/image_button_2_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Backup" />



  </LinearLayout>
  <LinearLayout
      android:id="@+id/image_button_3"
      style="@android:style/Widget.Button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="12dp"
      android:layout_marginBottom="4dp"
      android:gravity="center"
      android:onClick="onCancelled"
      android:visibility="invisible">
    <ImageView
        android:id="@+id/imgButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_cancel_icon" />

    <TextView
        android:id="@+id/image_button_3_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Cancel" />
  </LinearLayout>

</LinearLayout>
